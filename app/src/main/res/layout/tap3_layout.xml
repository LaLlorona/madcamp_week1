<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/act3_tap1_btn"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="contact"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/act3_tap2_btn"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="gallery"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/act3_tap3_btn"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Drawing"
        android:textColor="#ffffff"/>





    <TextView
        android:id="@+id/color_scheme"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/act3_tap1_btn"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-267dp"
        android:layout_marginTop="60dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/position"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/act3_tap1_btn"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-260dp"
        android:layout_marginTop="97dp"
        android:text="TextView" />

    <com.cooltechworks.views.ScratchImageView
        android:id="@+id/sample_image"
        android:layout_width="383dp"
        android:layout_height="372dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@android:color/white"
        android:src="@drawable/btf" />


</RelativeLayout>